{
"name": "projectfcr",
"private": true,
"version": "0.0.0",
"type": "module",
"scripts": {
"dev": "http-server projectfcr -p 5173 -c-1",
"lint": "eslint "projectfcr//*.js"",
"format": "prettier --write "projectfcr//.{js,css,html}"",
"test": "vitest run",
"test:watch": "vitest",
"test:e2e": "playwright test",
"check": "npm run lint && npm run test",
"prepare": "husky install",
"typecheck": "tsc -p tsconfig.json --noEmit"
},
"devDependencies": {
"@eslint/js": "^9.12.0",
"eslint": "^9.12.0",
"eslint-config-prettier": "^9.1.0",
"http-server": "^14.1.1",
"husky": "^9.0.11",
"jsdom": "^24.1.0",
"lint-staged": "^15.2.7",
"playwright": "^1.47.2",
"prettier": "^3.3.3",
"typescript": "^5.6.2",
"vitest": "^2.1.1"
},
"lint-staged": {
"projectfcr/**/.{js,css,html}": ["prettier --write"],
"projectfcr/**/*.js": ["eslint --max-warnings=0"]
}
}